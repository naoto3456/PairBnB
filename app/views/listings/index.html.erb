
<H3>Listings</H3>
<div>

<%= form_for @listing, url:{:action => 'search'} do |form| %>

	  <%= form.label :room_type %>
	  <%= select :listing, :room_type, [["entire_house", :entire_house], ["private_room", :private_room], ["shared_room", :shared_room]] %>
	  <%= form.label :price %>
	  <%= form.text_field :price %><br>
	  
	  <%= form.submit 'Search' %>
	</div>

<% end%>


<% @listings.each do |listing|  %>

	<%= link_to "#{listing.title}:Â¥#{listing.price}", listing_path(listing) %><br>
	<% if !listing.avatars.nil? %>
  		<% listing.avatars.each do |avator| %>
    		<% if !avator.file.nil? %>
      			<%= image_tag avator.thumb.url %>
    		<% end %>
  		<% end %>
	<% end %>

	<p><%= listing.description %></p>
<% end %>

</div>